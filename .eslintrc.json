{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "globals": {
        "expect": false,
        "helper": false
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-case-declarations": "off"
    }
}
